#    login_url: https://auth.server.com.br/login?domain=server
#    logout_url: https://auth.server.com.br/logout?domain=server

#
# Only Use For Testing
#
test:
  baseuri: ''
  domain: localhost:3000
  wkhtmltopdf: {{ wkhtmltopdf_path.stdout }}
  mailer_sender: '{{ snorby_mail_sender }}'
  geoip_uri: "http://geolite.maxmind.com/download/geoip/database/GeoLiteCountry/GeoIP.dat.gz"
  authentication_mode: {{ snorby_authentication_mode }}
