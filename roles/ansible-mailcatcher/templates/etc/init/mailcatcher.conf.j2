description "Mailcatcher"

start on runlevel [2345]
stop on runlevel [!2345]
respawn

pre-start script

bash << "EOF"
  mkdir -p /var/log/mailcatcher
  chown -R mailcatcher /var/log/mailcatcher
EOF

end script

pre-stop exec killall -q -v mailcatcher || :

exec su - mailcatcher -c 'mailcatcher -f -v --ip={{ mailcatcher_listen_address }} --smtp-ip={{ mailcatcher_smtp_listen_address }} --smtp-port={{ mailcatcher_smtp_port }} --http-ip={{ mailcatcher_http_listen_address }} --http-port={{ mailcatcher_http_port }} &>>/var/log/mailcatcher/mailcatcher.log'
